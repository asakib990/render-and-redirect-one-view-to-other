<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Add Menu-->
    <record id="menu_info_form" model="website.menu">
        <field name="name">Create Info</field>
        <field name="sequence">55</field>
        <field name="url">/add_info</field>
    </record>

    <template id="create_new_information" name="New Info">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">
                    <div class="container">
                        <form role="form" action="/create/webinfo" method="POST">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="form-group">
                                <label for="name" class="control-label">Name</label>
                                <input type="text" name="name" class="form-control"
                                       id="name" placeholder="Name"/>
                            </div>
                            <div class="form-group">
                                <label for="email" class="control-label">Your Email</label>
                                <input type="email" name="email" class="form-control"
                                        id="email" placeholder="e.g. 'xyz@gmail.com'"/>
                            </div>
                            <div class="clearfix oe_login_buttons">
                                <button type="submit" class="btn btn-primary">Create Info</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <record id="thanks_section" model="website.page">
        <field name="name">Thanks</field>
        <field name="url">/patient-thank-you</field>
        <field name="website_published">True</field>
        <field name="key">web_view.thanks_section</field>
        <field name="arch" type="html">
            <t name="Thanks">
                <t t-call="website.layout">
                    <div id="wrap">
                        <div class="container">
                            <h1>Thanks!</h1>
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="alert alert-success" role="status">
                                        Information Has Added Successfully.
                                    </div>
                                    <p>
                                        To Add New Info click <a href="/create/webinfo">here</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </field>
    </record>

</odoo>